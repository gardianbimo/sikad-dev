
<%= simple_form_for [:admin, @nilai] do |f| %>
    <%= f.input :nilai_huruf, label: 'Nilai' %>
    <%= f.input :skala %>
    <%= f.input :bobot %>
    <center>
      <%= f.submit 'Submit', class: 'btn btn-primary'%>
      <%= button_tag "Reset", type: :reset, class: 'btn btn-danger' %>
    </center>
<% end %>